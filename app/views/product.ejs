<%- include("./partials/head") -%>
    <%- include("./partials/header") -%>

        <main class="px-20 py-2">
            <h2 class="text-center font-bold text-xl lg:text-5xl">Vends ou achète PC / Console / Jeux / Accessoires /
                multimedias
            </h2>
            <h3 class="pb-10 text-center"><strong>Vendstonstuff.fr</strong> est un site de vente de produit multimedia
                d'occasion.</h3>
            <!-- Description du produit -->
            <div class="w-full border-2 border-solid border-white p-5">
                <h3 class="p-2 font-bold text-violet-800 bg-gray-400">
                    <%= article.name %>
                </h3>
                <div class="md:flex">
                    <img src=<%=article.img %> alt="pc portable" class="md:w-1/2">
                    <div class="p-5 w-full flex flex-col justify-between">
                        <p>
                            <%= article.description %>
                        </p>
                        <div class="md:flex justify-between items-center">
                            <div>
                                <p class="mb-4 md:mb0">Etat : <span>
                                        <%= article.state %>
                                    </span></p>
                                <p class="mb-4 md:mb0">Prix : <span>
                                        <%= article.price %>€
                                    </span></p>
                            </div>
                            <a href="product.html"
                                class="px-3 pb-2 pt-1 border-2 border-sky-900 rounded-full bg-violet-800 cursor-pointer hover:bg-blue-400 transition ease-in-out">Contacter
                                le vendeur</a>
                        </div>
                    </div>
                </div>
            </div>

        </main>

        <%- include("./partials/footer") -%>